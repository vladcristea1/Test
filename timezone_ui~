#!/bin/sh

FILE1=/tmp/calc1-$$
FILE2=/tmp/calc2-$$
ERROR=/tmp/calc-err-$$

which gdialog 2> /dev/null && DIALOG=gdialog || DIALOG=dialog

end () {
        rm -f $FILE1 $FILE2 $ERROR
        exit
}

while true
do
       $DIALOG --inputbox "Insert city(Continent/City):" 8 35 2> $FILE1 ||end
       if cat $FILE1 | /home/User/TimezoneProject/Test/timezone_ex > $FILE2 2>$ERROR
        then
                MSG="Result: `cat $FILE2`\n\nContinue?"
                $DIALOG --yesno "$MSG" 7 20 || end
        else
                MSG="Error:\n\n`cat $ERROR`\n\nContinue?"
                $DIALOG --yesno "$MSG" 10 35 || end
        fi
done
