#!/bin/sh

FILE1=/tmp/calc1-$$
FILE2=/tmp/calc2-$$
ERROR=/tmp/calc-err-$$

which gdialog 2> /dev/null && DIALOG=gdialog || DIALOG=dialog

end () {
        rm -f $FILE1 $FILE2 $ERROR
        exit
}

while true
do
        $DIALOG --inputbox "Insert city(Continent\City):" 8 35 2> $FILE1 || end
        export TZ=`cat $FILE1`
	MSG="Date: `date` \n\n Continue?"
	$DIALOG --yesno "$MSG" 8 50 || end
done
